<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="1dip" />

            <stroke android:width="1dip" android:color="@color/signin_button_pressed_color" />

            <gradient android:angle="-90" android:endColor="@color/signin_button_pressed_color" android:startColor="@color/signin_button_pressed_color"></gradient>
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="1dip" />

            <stroke android:width="1dip" android:color="@color/signin_button_pressed_color" />

            <solid android:color="@color/signin_button_pressed_color" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="1dip" />

            <stroke android:width="1dip" android:color="@color/signin_button_background_color" />

            <gradient android:angle="-90" android:endColor="@color/signin_button_background_color" android:startColor="@color/signin_button_pressed_color" />
        </shape></item>
    <item android:drawable="@color/signin_button_background_color" android:state_enabled="false"/>
    <item android:drawable="@color/signin_button_pressed_color" android:state_pressed="true"/>
    <item android:drawable="@color/signin_button_background_color" android:state_enabled="true"/>

</selector>